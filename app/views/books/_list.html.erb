<div>
  <h2 class="my-3">User info</h2>
    <%= image_tag @user.get_profile_image(100,100) %>
  <div>
    <table class="table">
      <tr>
        <td>name</td>
        <td><%= @user.name %></td>
      </tr>
    
      <tr>
        <td>introduction</td>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
  </div>
  
  <div>
  <% if current_user.id? %>
    <%= link_to edit_user_path(@user.id), class: "btn btn-primary form-control" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <%= link_to user_path, class: "btn btn-primary form-control" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
  </div>
  
    
    
    
    <div>
      <h2 class="my-3">New book</h2>
        <%= form_with model: book do |f| %>

      <h6>Title</h6>
        <%= f.text_field :title %>

      <h6>Opinion</h6>
        <%= f.text_area :body %></br>
  
        <%= f.submit 'Create Book' %>
        <% end %>
    </div>
</div>