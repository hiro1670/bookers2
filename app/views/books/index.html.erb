<div>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Option</th>
      </tr>
    </thead>
    
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image(100,100) %></td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
  
<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  
  <table>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
</div>
  
<div>
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %></br>
  
  <%= f.submit 'Create Book' %>
 <% end %>
</div>

</div>