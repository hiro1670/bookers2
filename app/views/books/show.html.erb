<div>
  <h1>Book detail</h1>
  
  <table>
    <tr>
      <td><%= image_tag @book.user.get_profile_image(100,100) %></br>
      <%= link_to @user.name, user_path %></td>
      <td><%= @book.title%></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit", edit_book_path %></td>
      <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
    </tr>
  </table>
</div>