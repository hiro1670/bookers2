<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book_new %>
    </div>

<div class="col-md-8 offset-md-1">
  <h2 class="my-3">Book detail</h2>

    <div>
      <table class="table">
        <tr>
          <td><%= link_to user_path(@book.user) do %>
          <%= image_tag @book.user.get_profile_image(100,100) %></br>
          <%= @user.name%>
          <% end %></td>
          <td><%= link_to @book.title,book_path(@book.id) %></td>
          <td><%= @book.body %></td>
            <% if @book.user == current_user %>
          <td><button class="btn btn-success"><%= link_to "Edit", edit_book_path %></button></td>
          <td><button class="btn btn-danger"><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></button></td>
            <% end %>
        </tr>
      </table>
      </div>
    </div>
  </div>
</div>