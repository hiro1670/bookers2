<div>
  <h3>Users</h3>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
      </tr>
    </thead>
    
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(100,100)%></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
     <% end %>
    </table>
    
<div>
  <h1>User info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  
  <table>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </table>
</div>
    
    <h1>New book</h1>
  <%= form_with model: @book do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %></br>
  
  <%= f.submit 'Create Book' %>
 <% end %>
    
</div>