<div class="container">
  <div class="row">
    
    <div class="col-3">
      <%= render 'books/list', books: @books %>
    </div>
    
    <div class="col-8 offset-md-1">
    <h1 class="my-3 ml-3">Users</h1>
  
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
    
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100)%></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
       <% end %>
    </table>
    </div>
  </div>
</div>