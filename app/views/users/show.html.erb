<div>
  <%= flash[:notice] %>
</div>

<div>
  <h3>Books</h3>
</div>

<div>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Option</th>
      </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100)%></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>

<%= render 'books/list', books: @books %>