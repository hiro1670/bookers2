<div class="container">
  <div class="row">
    <div>
      <%= flash[:notice] %>
    </div>
    
    <div class="col-3">
      <%= render 'books/list', book: @book %>
    </div>

    <div class="col-8 offset-md-1">
      <h1 class="my-3 ml-3">Books</h1>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Option</th>
            <th></th>
          </tr>
        </thead>
    
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path do %>
          <%= image_tag book.user.get_profile_image(100,100) %></br>
          <%= @user.name %>
          <% end %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>